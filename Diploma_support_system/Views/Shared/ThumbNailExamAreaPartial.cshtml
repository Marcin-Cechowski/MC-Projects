@model IEnumerable<Exam>

@if (Model.Count() > 0)
{
<div class="col-12 post @Model.FirstOrDefault().Promoter.Name.Replace(" ",string.Empty) menu-restaurant">
    <div class="row">
        <h3 class="text-success"> @Model.FirstOrDefault().Promoter.Name @Model.FirstOrDefault().Promoter.Surname </h3>
    </div>
    
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                Student
            </th>
            <th>
                Group
            </th>
            <th>
                Promoter
            </th>
            <th>
                Diploma name
            </th>
            <th>
                Reviewer
            </th>
            <th></th>
            <th></th>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @{
                        var studentFullName = item.Student.Name + " " + item.Student.Surname;
                        @Html.DisplayFor(m => studentFullName)
                    }
                </td>
                <td>
                    @Html.DisplayFor(m => item.Group.GroupNumber)
                </td>
                <td>
                    @{
                        var promoterFullName = item.Promoter.Name + " " + item.Promoter.Surname;
                        @Html.DisplayFor(m => promoterFullName)
                    }
                </td>
                <td>
                    @Html.DisplayFor(m => item.Student.DiplomaName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Reviewer)
                </td>

                <td>
                    <partial name="_ExamDetailsPartial" model="item.StudentId" />
                </td>
            </tr>


        }
        </table>
        <div class="p-4"></div>
    </div>
 }
 else
  {
    <p>There is no exam</p>
  }
                       