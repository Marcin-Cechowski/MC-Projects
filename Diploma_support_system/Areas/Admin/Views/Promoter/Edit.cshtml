@model Diploma_support_system.Models.ViewModels.PromoterAndAppUserViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<h2 class="text-info">Edit Promoter</h2>
<br />

<form method="post" asp-action="Edit">
    <div class="border backgroundWhiteBorder">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="@Model.AppUser.Name" hidden />
        <input asp-for="@Model.AppUser.Surname" hidden />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Promoter.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.Promoter.Name" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Promoter.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Promoter.Surname" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.Promoter.Surname" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Promoter.Surname" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditAndBackToListButton" model="Model.Promoter.Id" />
            </div>
        </div>
    </div>
</form>